<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/output_panel"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@color/colorOutputScreen"
        android:elevation="12dp"
        android:layout_marginBottom="10dp"
        android:text="1+1=1"
        android:textStyle="bold"
        android:textSize="50sp"
        android:textAlignment="viewEnd"/>

    <LinearLayout
        android:id="@+id/number_panel_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/output_panel">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="1"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="4"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="7"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_panel_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/number_panel_1"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@id/number_panel_1">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="2"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="5"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="8"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/number_panel_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@id/number_panel_2"
        android:layout_alignBottom="@id/number_panel_2">

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="3"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="6"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text="9"
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/math_actions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/number_panel_3"
        android:layout_alignTop="@id/number_panel_3"
        android:layout_alignBottom="@id/under_number_panel"
        android:orientation="vertical">

        <TextView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@color/colorOfMathAction"
            android:layout_margin="1dp"
            android:text="+"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@color/colorOfMathAction"
            android:layout_margin="1dp"
            android:text="-"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@color/colorOfMathAction"
            android:layout_margin="1dp"
            android:text="x"
            android:textSize="30sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@color/colorOfMathAction"
            android:layout_margin="1dp"
            android:text="/"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@color/colorOfMathAction"
            android:layout_margin="1dp"
            android:text="+/-"
            android:textSize="33sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@color/colorOfMathAction"
            android:layout_margin="1dp"
            android:text="%"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@color/colorOfMathAction"
            android:layout_margin="1dp"
            android:text="ce"
            android:textSize="35sp"
            android:textAlignment="center"
            android:textStyle="bold" />

        <TextView
            android:layout_width="49dp"
            android:layout_height="49dp"
            android:background="@color/colorOfMathAction"
            android:layout_margin="1dp"
            android:text="="
            android:textSize="35sp"
            android:textAlignment="center"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/under_number_panel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/number_panel_1"
        android:layout_alignLeft="@id/number_panel_1">

        <TextView
            android:layout_width="202dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:text="0"
            android:textStyle="bold"
            android:textSize="50dp"
            android:textAlignment="center"
            android:layout_margin="1dp" />

        <TextView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:background="@color/colorOfPlate"
            android:layout_margin="1dp"
            android:text=","
            android:textStyle="bold"
            android:textSize="50sp"
            android:textAlignment="center" />

    </LinearLayout>



</RelativeLayout>